
#include <stdio.h>
#include <string.h>
void main()
{
 char str[20];
 gets(str);
 
 int l= 0;
 int h = strlen(str)-1;
 while(h>l){
  if (str[l++]!=str[h--]) {
  printf("%s is not a palindrome\n",str);
  return 0;
 }     
 }
  printf("%s is a palindrome\n",str);
    return 0;
}
INPUT: MADAM
OUTPUT: MADAM is s palindrome
INPUT: APPLE 
OUTPUT: APPLE is not a palindrome
      
